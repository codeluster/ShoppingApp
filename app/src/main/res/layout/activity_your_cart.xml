<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tanmay.shoppingapp.YourCart">

        <android.support.v7.widget.Toolbar
            android:id="@+id/YourCartToolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Your Cart" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/CartCheckOutFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:clickable="true"
            android:elevation="6dp"
            android:src="@drawable/checkout"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:pressedTranslationZ="12dp" />

        <ListView
            android:id="@+id/CartListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/YourCartToolBar"
            app:layout_constraintBottom_toTopOf="@+id/cdut8"
            app:layout_constraintTop_toBottomOf="@+id/YourCartToolBar"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cdut8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/CartCheckOutFAB"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/cart_subTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="32dp"
            android:text="@string/subtotal"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/cart_tax1_title"
            app:layout_constraintEnd_toStartOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingEnd="9dp"
            android:text="@string/rupee"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            tools:layout_editor_absoluteX="269dp" />

        <TextView
            android:id="@+id/subtotal_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp"
            android:text="2365"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/discount_value"
            app:layout_constraintStart_toEndOf="@+id/textView6" />

        <TextView
            android:id="@+id/cart_tax1_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="32dp"
            android:text="Tax 1"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/cart_tax2_percentage"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="128dp" />

        <TextView
            android:id="@+id/cart_tax1_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="32dp"
            android:text="13.7 %"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/cart_discount_percentage"
            app:layout_constraintEnd_toStartOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingEnd="9dp"
            android:text="@string/rupee"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            tools:layout_editor_absoluteX="269dp" />

        <TextView
            android:id="@+id/tax1_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="2365"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            tools:layout_editor_absoluteY="128dp" />

        <TextView
            android:id="@+id/cart_tax2_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="32dp"
            android:text="Tax 2"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/cart_Total"
            app:layout_constraintEnd_toStartOf="@+id/cart_tax1_percentage"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/cart_tax2_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="32dp"
            android:text="11.3 %"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            tools:layout_editor_absoluteY="128dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingEnd="9dp"
            android:text="@string/rupee"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            tools:layout_editor_absoluteX="269dp" />

        <TextView
            android:id="@+id/tax2_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp"
            android:text="2365"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/subtotalAfterTaxes_value"
            app:layout_constraintStart_toEndOf="@+id/textView4" />

        <TextView
            android:id="@+id/cart_subTotalAfterTaxes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="32dp"
            android:text="Subtotal After Taxes"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/cart_subTotal"
            app:layout_constraintEnd_toStartOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingEnd="9dp"
            android:text="@string/rupee"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            tools:layout_editor_absoluteX="269dp" />

        <TextView
            android:id="@+id/subtotalAfterTaxes_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp"
            android:text="2365"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/nettotal_value"
            app:layout_constraintStart_toEndOf="@+id/textView3" />

        <TextView
            android:id="@+id/cart_discounts_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="32dp"
            android:text="Discount"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/cart_subTotalAfterTaxes"
            app:layout_constraintEnd_toStartOf="@+id/cart_discount_percentage"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/cart_discount_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="56dp"
            android:layout_marginEnd="32dp"
            android:text="- 14.7 %"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/cart_tax2_percentage"
            app:layout_constraintEnd_toStartOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingEnd="9dp"
            android:text="@string/rupee"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            tools:layout_editor_absoluteX="269dp" />

        <TextView
            android:id="@+id/discount_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp"
            android:text="2365"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/tax2_value"
            app:layout_constraintStart_toEndOf="@+id/textView5" />

        <TextView
            android:id="@+id/cart_Total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="32dp"
            android:text="Net Total"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/cart_discounts_title"
            app:layout_constraintEnd_toStartOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="9dp"
            android:text="@string/rupee"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="269dp"
            tools:layout_editor_absoluteY="128dp" />

        <TextView
            android:id="@+id/nettotal_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp"
            android:text="2365"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/tax1_value"
            app:layout_constraintStart_toEndOf="@+id/textView" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>

